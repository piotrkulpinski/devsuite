generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Tool {
  id             String              @id @default(cuid())
  name           String
  slug           String              @unique
  description    String?
  content        String?
  websiteUrl     String              @unique
  affiliateUrl   String?
  faviconUrl     String?
  screenshotUrl  String?
  isFeatured     Boolean             @default(false)
  submitterName  String?
  submitterEmail String?
  publishedAt    DateTime?
  updatedAt      DateTime            @updatedAt
  createdAt      DateTime            @default(now())
  categories     Category[]
  tags           Tag[]

  @@index([id, slug])
}

model Category {
  id          String            @id @default(cuid())
  name        String
  slug        String            @unique
  description String?
  updatedAt   DateTime          @updatedAt
  createdAt   DateTime          @default(now())
  tools       Tool[]
}

model Tag {
  id        String            @id @default(cuid())
  name      String
  slug      String            @unique
  updatedAt DateTime          @updatedAt
  createdAt DateTime          @default(now())
  tools     Tool[]
}
